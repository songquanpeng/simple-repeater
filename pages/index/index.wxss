page {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  background-color: rgb(249, 249, 249)
}

.container {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: column;
}

.record {
  width: 3em;
  height: 3em;
  background-color: rgb(250, 41, 44);
  border-radius:50%;
  border: 3em solid #fff ;
  box-shadow:2px 2px 5px #333333;
}

.record:active {
  width: 3.2em;
  height: 3.2em;
  /* background-color: rgb(41, 250, 51); */
  border-radius:50%;
  border: 2.8em solid #fff ;
  box-shadow:1px 2px 3px #333333;
}

.prompt {
  font-size: larger;
  font-weight: bold;
}